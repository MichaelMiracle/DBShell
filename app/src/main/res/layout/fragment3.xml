<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.miracle.base.view.TitleBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:TitleBar_Background="@color/dark_red"
            app:TitleBar_LeftVisibility="invisible"
            app:TitleBar_TextColor="@color/white"
            app:TitleBar_Title="消息" />

        <com.miracle.base.view.ItemBar
            android:id="@+id/ibGroupChat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:ItemBar_Left_Icon="@string/icon_chatroom"
            app:ItemBar_Text="聊天室" />

        <com.miracle.base.view.ItemBar
            android:id="@+id/ibCustomerService"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:ItemBar_Left_Icon="@string/icon_customer_service"
            app:ItemBar_Text="客服" />
    </LinearLayout>


</layout>